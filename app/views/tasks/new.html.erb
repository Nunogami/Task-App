<% provide(:title, 'New Task') %>
<% provide(:class_text, 'newtask') %>
<% provide(:button_text, '新規作成') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <%= form_tag tasks_create_path do %>
      
      <form>
        <% if @task.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <label class="label-form" for="task_name">名称</label>
        <input class="form-control" type="text" name="task_name">
  
        <label class="label-form" for="task_description">詳細</label>
        <textarea rows="5" class="form-control" name="task_description"></textarea>
  
        <input type="submit" name="commit" value="新規登録" class="btn btn-lg btn-primary btn-form" data-disable-with="新規登録">
      </form>
      <% end %>
  </div>
</div>