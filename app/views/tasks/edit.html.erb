<% provide(:title, 'Edit Task') %>
<h1>タスク更新</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <%= form_tag update_task_path do %>

      <form>
        <% if @task.errors.any? %>
          <div class="alert alert-warning">
            <ul>
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <label class="label-form" for="task_name">名称</label>
        <input class="form-control" type="text" name="task_name" value="<%= @task.task_name %>">
  
        <label class="label-form" for="task_description">詳細</label>
        <textarea rows="5" class="form-control" name="task_description"><%= @task.task_description %></textarea>
  
        <input type="submit" name="commit" value="更新" class="btn btn-md btn-primary btn-form" data-disable-with="更新">
        <%= link_to "キャンセル", tasks_index_path, class: "btn btn-default btn-form" %>
      </form>
      <% end %>
  </div>
</div>